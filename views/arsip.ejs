<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NotesApp</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <h2>Menu</h2>
        <nav>
            <ul>
                <li><a href="/" class="nav-item">ðŸ“‹ Catatan</a></li>
                <li><a href="/arsip" class="nav-item">ðŸ“‚ Arsip</a></li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="content">
        <header class="header">
            <h1>Secret</h1>
        </header>

        <!-- Notes Container -->
        <section class="notes-container">
            <% data.forEach((datas) => { %>
                <div class="note-card">
                    <p class="note-text" contenteditable="false"><%= datas.content %></p>
                    <div class="btn">
                        <form action="/arsip/undo" method="post">
                            <input type="hidden" name="id" value="<%= datas.id %>">
                            <button type="submit" class="btn-arsip">Arsip undo</button>
                        </form>
                    </div>

                </div>
            <% }); %>
        </section>
    </main>

    <!-- Scripts -->
    <script src="/scripts/script.js"></script>
</body>
</html>
